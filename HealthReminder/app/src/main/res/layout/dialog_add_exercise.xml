<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise Routine"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- Name -->
    <EditText
        android:id="@+id/et_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exercise Name (e.g., Yoga, Gym)"
        android:padding="12dp" />

    <!-- Type -->
    <EditText
        android:id="@+id/et_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type (Gym, Yoga, Walk)"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

    <!-- Duration -->
    <EditText
        android:id="@+id/et_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (minutes)"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

    <!-- Days -->
    <EditText
        android:id="@+id/et_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Days (Mon,Tue...) or leave empty"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Exercise"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

</LinearLayout>
